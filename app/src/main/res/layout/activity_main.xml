<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1C1C1C"
    android:padding="16dp">

    <!-- App Header Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/App_header"
        android:textStyle="italic"
        android:textSize="28sp"
        android:textColor="#FFC107"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"/>

    <!-- Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_box"
        android:elevation="8dp"
        android:layout_marginBottom="20dp">

        <!-- Input Label -->
        <TextView
            android:id="@+id/tvInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/length_enter"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-light"/>

        <!-- Input TextBox for Length -->
        <EditText
            android:id="@+id/etInputLength"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:hint="@string/value_enter"
            android:padding="10dp"
            android:backgroundTint="#E4D9D6"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textColorHint="#CCCCCC"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>

    <!-- From Unit Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_box"
        android:elevation="8dp"
        android:layout_marginBottom="20dp">

        <!-- From Unit Label -->
        <TextView
            android:id="@+id/tvFromUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from_unit"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-light"/>

        <!-- From Unit Spinner -->
        <Spinner
            android:id="@+id/spinnerFromUnit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#03DAC5"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- To Unit Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_box"
        android:elevation="8dp"
        android:layout_marginBottom="20dp">

        <!-- To Unit Label -->
        <TextView
            android:id="@+id/tvToUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_unit"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-light"/>

        <!-- To Unit Spinner -->
        <Spinner
            android:id="@+id/spinnerToUnit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#03DAC5"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- Convert Button -->
    <Button
        android:id="@+id/btnConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:textColor="#FFC107"
        android:backgroundTint="#9E8C87"
        android:padding="16dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp"
        android:elevation="6dp"/>

    <!-- Output Text for Result -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-light"/>

    <!-- Decorative Image at Bottom -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/converter"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"/>
</LinearLayout>
